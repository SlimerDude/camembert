## This is a setting files. The format is key = value
## where the value is formatted in JSON format.

# Default font : for anyhting but the editor
font = "9pt {{font}}"

# Default font color : for anyhting but the editor
fontColor = "#000000"

# Background color : for anyhting but the editor
bg = "#ffffff"

# Background of space 'pills'
spacePillBg = "#eeeeee"

# Background of selected items
selectedItem = "#99ff99"

# Font used in editor pane'
edFont = "11pt {{font}}"

# Editor pane background color'
edBg = "#ffffff"

# Editor pane background behind current line'
edCurLineBg = "#eeeeee"

# Background Color for text selection in Editor'
edSelectBg = "#ffff00"

# Where to show color indicators (lines in the editor background)
edCols = [2,79]

# Color for the color indicators
edColsColor = "#dddddd"

# Default color of text in the editor
edText = {"fg":"#000000",
"bg":null,
"font":null,
"underlineColor":null,
"underline":"none"}

# brackets in editor
edBracket = {"fg":"#ff0000",
"bg":null,
"font":null,
"underlineColor":null,
"underline":"none"}

# brackets match in editor
edBracketMatch = {"fg":"#ff0000",
"bg":"#ffff00",
"font":null,
"underlineColor":null,
"underline":"none"}

# keywords in editors
edKeyword = {"fg":"#0000ff",
"bg":null,
"font":null,
"underlineColor":null,
"underline":"none"}

# Numbers in editor
edNum = {"fg":"#770077",
"bg":null,
"font":null,
"underlineColor":null,
"underline":"none"}

# Strings in editor
edStr = {"fg":"#007777",
"bg":null,
"font":null,
"underlineColor":null,
"underline":"none"}

# Comments in editor
edComment = {"fg":"#007700",
"bg":null,
"font":null,
"underlineColor":null,
"underline":"none"}

# Color of line number addicator
lineNumberColor = "#aaaaaa"

#Color of the caret
caretColor = "#000000"

#Color of the scrollbar bg
scrollBg = "#dddddd"

#Color of the scrollbar handle
scrollFg = "#bbbbbb"

#Color for help docs bg 1
helpBg1  = "#aaffaa"

#Color for help docs bg 2
helpBg2 = "#aaaaff"

